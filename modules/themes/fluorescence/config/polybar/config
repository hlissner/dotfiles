;=====================================================
; Custom scripts
;=====================================================

[module/pad]
type = custom/text
content = "   "
content-foreground = ${colors.fg-alt}

[module/redshift]
type = custom/script
exec = ~/.config/polybar/modules/redshift
exec-if = pgrep -x redshift
interval = 60
format-padding = 1

[module/syncthing]
type = custom/script
exec = echo 1
exec-if = systemctl is-active syncthing
format = ""
format-foreground = ${colors.fg}
interval = 30

