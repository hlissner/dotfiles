; cancel
menu-2-1 = 
menu-2-1-exec = menu-open-0


;=====================================================
; Custom scripts
;=====================================================

[module/pkg]
type = custom/ipc
format = <output>
hook-0 = ~/.config/polybar/modules/updates
initial = 1
click-left = polybar-msg -p %pid% hook pkg 1

[module/mail]
type = custom/ipc
format = <output>
hook-0 = ~/.config/polybar/modules/mail
initial = 1
click-left = polybar-msg -p %pid% hook mail 1

[module/app-redshift]
type = custom/script
interval = 120
label-padding = 1
exec = ~/.config/polybar/modules/app-redshift
exec-if = "pgrep redshift >/dev/null"

[module/app-rslsync]
type = custom/script
interval = 60
label-padding = 1
exec = ~/.config/polybar/modules/app-rslsync
exec-if = "pgrep rslsync >/dev/null"

